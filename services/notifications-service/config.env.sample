# gRPC
GRPC_PORT=50058

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=notifications_service
DB_PASSWORD=secret
DB_DATABASE=metargb_db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis (optional for rate limiting and delivery tracking)
REDIS_ADDR=localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# SMS Provider
SMS_PROVIDER=kavenegar
SMS_API_KEY=change-me
SMS_SENDER=10008663

# Email Provider (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=secret
SMTP_FROM_NAME=MetaRGB Notifications
SMTP_FROM_EMAIL=notifications@example.com

# Notification defaults
DEFAULT_SMS_TEMPLATE=standard
DEFAULT_EMAIL_SUBJECT=MetaRGB Notification


